<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/login1Fragment">
    <fragment
        android:id="@+id/login1Fragment"
        android:name="com.example.digitalhousefood_desafio2.Login1Fragment"
        android:label="Login1Fragment" >
        <action
            android:id="@+id/action_login1Fragment_to_register1Fragment"
            app:destination="@id/register1Fragment" />
        <action
            android:id="@+id/action_login1Fragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/register1Fragment"
        android:name="com.example.digitalhousefood_desafio2.Register1Fragment"
        android:label="Register1Fragment" >
        <action
            android:id="@+id/action_register1Fragment_to_restaurantFragment"
            app:destination="@id/restaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.example.digitalhousefood_desafio2.RestaurantFragment"
        android:label="fragment_restaurant"
        tools:layout="@layout/fragment_restaurant" />
</navigation>